#Include ./src/lib/Memory.rlx
#Include ./src/lib/String.rlx
#Include ./src/lib/Console.rlx

struct Test {
	i64 Value,
	
	declare void Test(),
	
	define i64 GetValue() {
		return this->Value
	},
	define i64 GetValue(i8 Pass) {
		return Pass
	},
	define void SetValue(i64 New) {
		this->Value := New
	},
	
	define void Test() {
		return 0
	}
}

struct BadIdea {
	define i64 What() {
		return 90
	}
}

define i32 Main() {
	
	Test* T := Alloc(#Test)
	
	IWrite(T->GetValue())
	
	T->SetValue(20059)
	
	WriteCharacter(',')
	
	IWrite(T->GetValue())
	
	WriteCharacter(' ')
	
	Test L
	
	L.SetValue(0)
	
	IWrite(L.GetValue())
	
	WriteCharacter(',')
	
	L.SetValue(20060)
	
	IWrite(L.GetValue())
	
	WriteCharacter(' ')
	BadIdea* B := 0
	IWrite(B->What())
	
	WriteCharacter(' ')
	
	IWrite(L.GetValue(90))
	
	return 0
}
